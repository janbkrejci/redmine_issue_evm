<div class="issues box">
  <h3 class="icon icon-issue">EVM</h3>
  <% if evm.nil? %>
    <p class='nodata'>
      <%= l(:label_no_evm_setting) %>
    </p>
  <% else %>
    <ul>
      <li><%= l(:indicator_table_header_date)%>: <%= format_date(evm.basis_date) %></li>
      <li><%= l(:label_baseline) %>: <%= baseline_subject %></li>
    </ul>
    <table id='evm-indicator-value-table' border='1' bordercolor = '#bbb'>
      <tr>
        <th>BAC</th>
        <th>PV</th>
        <th>EV</th>
        <th>AC</th>
        <th>SV</th>
        <th>CV</th>
        <th>SPI</th>
        <th>CPI</th>
      </tr>
      <tr>
        <td><%= number_with_precision(evm.bac, delimiter: " ", precision: 0) %></td>
        <td><%= number_with_precision(evm.today_pv, delimiter: " ", precision: 0) %></td>
        <td><%= number_with_precision(evm.today_ev, delimiter: " ", precision: 0) %></td>
        <td><%= number_with_precision(evm.today_ac, delimiter: " ", precision: 0) %></td>
        <td><%= number_with_precision(evm.today_sv, delimiter: " ", precision: 0) %></td>
        <td><%= number_with_precision(evm.today_cv, delimiter: " ", precision: 0) %></td>
        <td><%= evm.today_spi %></td>
        <td><%= evm.today_cpi %></td>
      </tr>
      <!-- tr>
        <td><%= evm.bac(working_hours) %></td>
        <td><%= evm.today_pv(working_hours) %></td>
        <td><%= evm.today_ev(working_hours) %></td>
        <td><%= evm.today_ac(working_hours) %></td>
        <td><%= evm.today_sv(working_hours) %></td>
        <td><%= evm.today_cv(working_hours) %></td>
        <td><%= evm.today_spi(working_hours) %></td>
        <td><%= evm.today_cpi(working_hours) %></td>
      </tr -->
    </table>
    <p>
      <!-- %= l(:explanation_upper_row) % --> <%= l(:explanation_lower_row) %>
    </p>
  <% end %>
</div>
